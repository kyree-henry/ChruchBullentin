@page "/fetchbulletinitem"
@using ChruchBulletin.Core.Entity;
@inject HttpClient Http

<PageTitle>Chruch Bulletin</PageTitle>

<h1>Chruch Bulletin</h1>

<p>This component demonstrates fetching chruch bulletin items</p>

@if (bulletins == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in bulletins)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private BulletinItem[]? bulletins;

    protected override async Task OnInitializedAsync()
    {
        bulletins = await Http.GetFromJsonAsync<BulletinItem[]>("BulletinItem");
    }
}
